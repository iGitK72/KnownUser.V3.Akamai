{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "ES2015",
    "module": "es2015",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": [
    "lib",
    "dist",
    "gulpfile.cjs",
    "test"
  ]
}
